<%= turbo_stream.replace("closed-cards", partial: "boards/show/closed", method: :morph, locals:{ board: @card.board }) %>

<%# Mobile updates - replace category elements with morph for smooth transition %>
<%= turbo_stream.replace("mobile-category-not-now", partial: "boards/show/mobile_not_now_category", method: :morph, locals: { board: @card.board }) %>
<%= turbo_stream.replace("mobile-category-stream", partial: "boards/show/mobile_stream_category", method: :morph, locals: { board: @card.board }) %>
<%= turbo_stream.replace("mobile-category-closed", partial: "boards/show/mobile_closed_category", method: :morph, locals: { board: @card.board }) %>
<% @card.board.columns.each do |column| %>
<%= turbo_stream.update "mobile-category-column-#{column.id}-count", column.cards.active.count.to_s %>
<%= turbo_stream.replace("mobile-category-column-#{column.id}-cards", partial: "boards/show/mobile_column_cards", method: :morph, locals: { column: column }) %>
<% end %>
