<li class="list-style-none margin-none flex align-center gap full-width" id="<%= dom_id(rule) %>">
  <%= link_to edit_notifications_rule_path(rule), class: "txt-ink flex gap-half align-center min-width txt-medium" do %>
    <div class="flex flex-column">
      <div class="flex align-center gap-half">
        <strong class="overflow-ellipsis"><%= rule.name %></strong>
        <% unless rule.active? %>
          <span class="badge badge--muted txt-xx-small">Paused</span>
        <% end %>
      </div>
      <span class="txt-x-small txt-muted txt-normal-case"><%= rule.description %></span>
      <span class="txt-xx-small txt-muted txt-normal-case">
        <%= rule.frequency.capitalize %> at <%= rule.send_time&.strftime("%l:%M %p")&.strip || "9:00 AM" %>
      </span>
    </div>
  <% end %>

  <hr class="separator--horizontal flex-item-grow" style="--border-color: var(--color-ink-medium); --border-style: dashed" aria-hidden="true">

  <%= button_to notifications_rule_path(rule), method: :delete, class: "btn btn--circle btn--negative txt-xx-small flex-item-no-shrink",
        data: { turbo_confirm: "Are you sure you want to delete this rule?" } do %>
    <%= icon_tag "minus" %>
    <span class="for-screen-reader">Remove <%= rule.name %></span>
  <% end %>
</li>
