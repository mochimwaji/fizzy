<li class="list-style-none margin-none flex align-center gap full-width" id="<%= dom_id(rule) %>">
  <%= link_to edit_notifications_rule_path(rule), class: "txt-ink flex align-center gap-half min-width" do %>
    <strong><%= rule.name %></strong>
    <% unless rule.active? %>
      <span class="badge badge--muted txt-xx-small">Paused</span>
    <% end %>
    <span class="txt-small" style="color: var(--color-ink-light);">|</span>
    <span class="txt-small" style="color: var(--color-ink-light);"><%= rule.frequency.capitalize %></span>
    <span class="txt-small" style="color: var(--color-ink-light);">|</span>
    <span class="txt-small" style="color: var(--color-ink-light);"><%= rule.send_time&.strftime("%l:%M %p")&.strip || "9:00 AM" %></span>
    <span class="txt-small" style="color: var(--color-ink-light);">|</span>
    <span class="txt-small" style="color: var(--color-ink-light);"><%= rule.due_in_days.present? ? "Due in #{rule.due_in_days}d" : "Any due date" %></span>
    <% if rule.boards.any? %>
      <span class="txt-small" style="color: var(--color-ink-light);">|</span>
      <span class="txt-small" style="color: var(--color-ink-light);"><%= rule.boards.map(&:name).to_sentence(two_words_connector: ", ", last_word_connector: ", ") %></span>
    <% end %>
    <% if rule.tags.any? %>
      <span class="txt-small" style="color: var(--color-ink-light);">|</span>
      <span class="txt-small" style="color: var(--color-ink-light);"><%= rule.tags.map(&:title).to_sentence(two_words_connector: ", ", last_word_connector: ", ") %></span>
    <% end %>
  <% end %>

  <hr class="separator--horizontal flex-item-grow" style="--border-color: var(--color-ink-medium); --border-style: dashed" aria-hidden="true">

  <%= button_to notifications_rule_path(rule), method: :delete, class: "btn btn--circle btn--negative txt-xx-small flex-item-no-shrink",
        data: { turbo_confirm: "Are you sure you want to delete this rule?" } do %>
    <%= icon_tag "minus" %>
    <span class="for-screen-reader">Remove <%= rule.name %></span>
  <% end %>
</li>
