<% @page_title = "New Notification Rule" %>

<% content_for :header do %>
  <div class="header__actions header__actions--start">
    <%= back_link_to "Rules", notifications_rules_path, "keydown.left@document->hotkey#click keydown.esc@document->hotkey#click" %>
  </div>
  <h1 class="header__title"><%= @page_title %></h1>
<% end %>

<section class="settings">
  <div class="settings__panel panel shadow center">
    <%= render "form", notification_rule: @notification_rule %>
  </div>
</section>
