#!/bin/bash -e

# If running the rails server then create or migrate existing database
if [ "${1}" == "./bin/thrust" ] && [ "${2}" == "./bin/rails" ] && [ "${3}" == "server" ]; then
  MIGRATE=1 ./bin/rails db:prepare
  ./bin/rails db:create:queue db:migrate:queue 2>/dev/null || true
  ./bin/rails db:create:cache db:migrate:cache 2>/dev/null || true
  ./bin/rails db:create:cable db:migrate:cable 2>/dev/null || true
fi

exec "${@}"
